# syntax=docker/dockerfile:1.7

ARG BASE_IMAGE
FROM ${BASE_IMAGE}

WORKDIR /app

# Copy minimal requirements for infra core (from repo root)
COPY requirements.base.txt /app/requirements.base.txt
COPY main_pc_code/requirements.txt /app/requirements.txt
RUN python -m pip install --upgrade pip setuptools wheel \
    && pip install --no-cache-dir -r /app/requirements.base.txt \
    && pip install --no-cache-dir -r /app/requirements.txt

COPY main_pc_code/agents/ /app/agents/
ENV PYTHONPATH=/app

HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=5 \
  CMD ["python","-c","import importlib,sys; importlib.import_module('main_pc_code.agents.service_registry_agent'); sys.exit(0)"]

CMD ["python", "-u", "/app/agents/service_registry_agent.py"]


