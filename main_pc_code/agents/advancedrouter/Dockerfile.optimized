# syntax=docker/dockerfile:1.5
# AdvancedRouter - CPU service (PC2)
FROM ghcr.io/haymayndzultra/base-cpu-pydeps:20250812-latest AS base

ARG MACHINE=pc2
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Copy machine profile
COPY config/machine-profiles/${MACHINE}.json /etc/machine-profile.json

# Builder stage
FROM base AS builder
COPY requirements/advancedrouter.txt ./requirements.txt
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --no-cache-dir --require-hashes -r requirements.txt

# Runtime stage  
FROM base AS runtime
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY advancedrouter/ ./advancedrouter
COPY entrypoints/advancedrouter_entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

USER appuser

# Health check on port 8129
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -sf http://localhost:8129/health || exit 1

# Expose service and health ports
EXPOSE 7129 8129

ENTRYPOINT ["/usr/bin/tini","--"]
CMD ["/entrypoint.sh"]
