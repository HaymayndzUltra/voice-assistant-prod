# syntax=docker/dockerfile:1.7

ARG BASE_IMAGE
FROM ${BASE_IMAGE} AS base

FROM python:3.11-slim AS builder
WORKDIR /build
COPY main_pc_code/agents/requirements.unifiedsystemagent.txt /build/requirements.txt
RUN --mount=type=cache,target=/root/.cache/pip \
    python -m pip install --upgrade pip wheel setuptools && \
    pip wheel -w /wheels -r /build/requirements.txt

FROM ${BASE_IMAGE}

WORKDIR /app

# Install only the minimal dependencies required by UnifiedSystemAgent
COPY main_pc_code/agents/requirements.unifiedsystemagent.txt /app/requirements.txt
RUN python -m pip install --upgrade pip setuptools wheel \
    && pip install --no-cache-dir -r /app/requirements.txt

COPY --from=builder /wheels /wheels
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --no-cache-dir --find-links=/wheels -r /app/requirements.txt
COPY main_pc_code/agents/ /app/agents/
ENV PYTHONPATH=/app

HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=5 \
  CMD curl -f http://localhost:8201/health || exit 1

ENTRYPOINT ["/usr/bin/tini","--"]

CMD ["python", "-u", "/app/agents/unified_system_agent.py"]


