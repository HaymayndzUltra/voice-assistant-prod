# Environment variables for AI System containers
# Copy this file to env.podman and modify as needed

# General settings
PYTHONPATH=/app
LOG_LEVEL=INFO
DEBUG_MODE=false
ENABLE_METRICS=true
ENABLE_TRACING=true

# Network settings
MAINPC_IP=172.20.0.2
PC2_IP=192.168.1.100  # Update with actual PC2 IP
NETWORK_CONFIG_PATH=/app/config/network_config.yaml

# GPU settings
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility,video
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.9

# Model settings
MODEL_BASE_PATH=/app/models
GGUF_MODELS_PATH=/app/models/gguf
EMBEDDING_MODEL_PATH=/app/models/embedding
VISION_MODEL_PATH=/app/models/vision

# Memory settings
MEMORY_DB_PATH=/app/data/memory.db
MEMORY_VECTOR_PATH=/app/data/vectors

# Security settings
SSL_CERT_PATH=/app/certificates/server.crt
SSL_KEY_PATH=/app/certificates/server.key_secret
ENABLE_SSL=true
AUTH_REQUIRED=true

# Container-specific settings
# These will be overridden by the docker-compose.yml file
CONTAINER_GROUP=core_services
CONTAINER_NAME=core-services

# Agent health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3 