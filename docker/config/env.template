# AI System Environment Configuration Template
# Copy this to .env and configure for your deployment

# =============================================================================
# CORE SYSTEM CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
DEBUG_MODE=false
PYTHONPATH=/app

# =============================================================================
# MACHINE IDENTIFICATION  
# =============================================================================
# Set to "mainpc" or "pc2" to identify the machine
MACHINE_TYPE=mainpc
HOSTNAME=mainpc-docker

# For MainPC (RTX 4090):
# MACHINE_TYPE=mainpc
# HOSTNAME=mainpc-docker

# For PC2 (RTX 3060):
# MACHINE_TYPE=pc2  
# HOSTNAME=pc2-docker

# =============================================================================
# CROSS-MACHINE NETWORKING
# =============================================================================
# IP addresses of both machines
MAINPC_HOST=192.168.100.16
PC2_HOST=192.168.100.17

# Network configuration
NETWORK_SUBNET=172.20.0.0/16
VPN_ENABLED=false

# =============================================================================
# SERVICE DISCOVERY & COORDINATION
# =============================================================================
# Redis configuration (shared between machines)
REDIS_HOST=192.168.100.16
REDIS_PORT=6379
REDIS_PASSWORD=

# NATS configuration
NATS_HOST=192.168.100.16
NATS_PORT=4222
NATS_CLUSTER_NAME=ai-system

# Service Registry
SERVICE_REGISTRY_HOST=192.168.100.16
SERVICE_REGISTRY_PORT=7200

# =============================================================================
# GPU CONFIGURATION
# =============================================================================
# CUDA settings
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# GPU memory management
GPU_MEMORY_FRACTION=0.8
ENABLE_GPU_MONITORING=true

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_LOGGING=true

# Prometheus metrics
METRICS_PORT=9090
METRICS_PATH=/metrics

# Jaeger tracing
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Grafana dashboard
GRAFANA_HOST=localhost
GRAFANA_PORT=3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable security features
ENABLE_TLS=false
ENABLE_AUTH=false
ENABLE_ENCRYPTION=false

# Security keys (generate new ones for production)
JWT_SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
TLS_CERT_PATH=/app/certs/tls.crt
TLS_KEY_PATH=/app/certs/tls.key

# =============================================================================
# MODEL MANAGEMENT
# =============================================================================
# Model storage paths
MODELS_DIR=/app/models
CACHE_DIR=/app/cache
DATA_DIR=/app/data

# Model loading settings
MODEL_LOAD_TIMEOUT=300
MODEL_CACHE_SIZE_GB=10
VRAM_BUDGET_PERCENTAGE=80

# Hugging Face configuration
HF_TOKEN=your-hf-token-here
HF_CACHE_DIR=/app/cache/huggingface

# =============================================================================
# MEMORY & SESSION MANAGEMENT
# =============================================================================
# Memory configuration
MAX_MEMORY_MB=8192
SESSION_TIMEOUT=3600
MEMORY_CLEANUP_INTERVAL=300

# Session storage
SESSION_STORE_TYPE=redis
SESSION_PREFIX=ai_session:

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
# Async settings
MAX_WORKERS=4
ASYNC_POOL_SIZE=10
REQUEST_TIMEOUT=30

# Connection pooling
REDIS_POOL_SIZE=10
HTTP_POOL_SIZE=20
ZMQ_POOL_SIZE=5

# =============================================================================
# ERROR HANDLING & RESILIENCE
# =============================================================================
# NATS Error Bus
ERROR_BUS_ENABLED=true
ERROR_BUS_SUBJECT=ai.errors
ERROR_RETENTION_DAYS=7

# Circuit breaker settings
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
EXPONENTIAL_BACKOFF=true

# =============================================================================
# SERVICE MESH (Optional)
# =============================================================================
# Set to true to disable service mesh (default for initial deployment)
MESH_DISABLED=true

# Service mesh configuration (when enabled)
SERVICE_MESH_TYPE=istio
MESH_NAMESPACE=ai-system
MESH_METRICS_ENABLED=true

# =============================================================================
# SYNC & COORDINATION
# =============================================================================
# Cross-machine sync settings
SYNC_ENABLED=true
SYNC_INTERVAL=300
SYNC_RETRY_COUNT=3

# Data synchronization
SYNC_MODELS=true
SYNC_SESSIONS=true
SYNC_HEALTH=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development flags
DEV_MODE=false
ENABLE_DEV_ENDPOINTS=false
SKIP_AUTH_IN_DEV=false

# Testing configuration
RUN_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
STARTUP_HEALTH_CHECK_TIMEOUT=120

# =============================================================================
# VOLUME MOUNTS & STORAGE
# =============================================================================
# Data persistence
PERSIST_LOGS=true
PERSIST_MODELS=true
PERSIST_DATA=true

# Backup configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# =============================================================================
# CONTAINER SPECIFIC SETTINGS
# =============================================================================
# Container resource limits
MEMORY_LIMIT=8G
CPU_LIMIT=4.0
GPU_MEMORY_LIMIT=12G

# Container user (security)
CONTAINER_USER=ai
CONTAINER_GROUP=ai
CONTAINER_UID=1000
CONTAINER_GID=1000

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# API endpoints
EXTERNAL_API_BASE_URL=https://api.example.com
API_RATE_LIMIT=100
API_TIMEOUT=30

# Webhook configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# =============================================================================
# CUSTOM APPLICATION SETTINGS
# =============================================================================
# Add your custom environment variables below this line

# Example custom settings:
# CUSTOM_FEATURE_ENABLED=true
# CUSTOM_API_KEY=your-api-key
# CUSTOM_ENDPOINT=https://your-service.com
